{% set nav_post = 1 %}
{% extends "ApplicationAnunciosBundle::layout.html.twig" %}

{% block title "Anuncios" %}


{% block sidebar %}
	<a href="{{ path('post_new') }}" class="btn large primary">Publicar anuncio</a>
	<br/>

	<b>Filtrar por categor√≠a</b><br/>
	{% for category in categories %}
		<a href="{{ path('post') }}search?c={{loop.index0}}">{{category}}</a>
	{% endfor %}
{% endblock %}



{% block content %}


<h1>Anuncios</h1>




<ul>
    {% for entity in entities %}
        <li>
            <a href="{{ path('post_show', { 'id': entity.id }) }}" class="title">{{ entity.title }}</a><br/>
            {{ entity.body|truncate(200) }}<br/>
            <span class="date">{{ entity.date|date('d/m/Y') }}</span>
			<br/><br/>
        </li>
    {% endfor %}
</ul>





{{ pager|raw }}




{% endblock %}