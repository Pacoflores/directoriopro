					{{ entity.company }} - 
				{% endif %}
				<a href="{{ path('post_city', { 'id': entity.getCityId() }) }}" style="color:black">{{ entity.location }}</a>
			</div>
			
			<div style="float:right;width:100px;">
				{% if entity.type == 0 %}
					<span class="label success">Empleo</span>
				{% elseif entity.type == 1 %}
					<span class="label notice">Freelance</span>
				{% else %}
					<span class="label warning">Prácticas</span>
				{% endif %}<br/>
				<span class="date">{{ entity.date|date('d/m/Y') }}</span>
			</div>
			

			




