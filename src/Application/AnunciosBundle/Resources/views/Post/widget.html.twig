{% set sitename = "Ofertas de empleo" %}
<!DOCTYPE html>
<html>
<head>
	<title>{{ sitename }}</title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<body>

<style>
*{font-size:14px;font-family:arial}
BODY{padding:0;margin:0}
A{color:#267DD3;text-decoration:none}
A:HOVER{text-decoration:underline}
UL{margin:0;padding:0;margin-left:15px}
LI{margin-bottom:10px}

.header{font-weight:bold;padding-bottom:20px}

.footer{color:#666;padding-top:10px}
	.footer A{color:#666}
</style>

<div class="header">Ofertas de empleo</div>

<ul>
{% for entity in entities %}
	<li><a href="{{ url('post_show', { 'id': entity.id, 'slug': entity.slug }) }}" target="_blank">{{ entity.title }}</a></li>
{% endfor %}
</ul>

<div class="footer"><a href="http://dir.betabeers.com" target="_blank">Ofertas de empleo por betabeers</a></div>
	
</body>
</html>