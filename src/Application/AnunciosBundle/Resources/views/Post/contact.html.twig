{% extends "ApplicationAnunciosBundle::layout.html.twig" %}
{% form_theme form 'ApplicationAnunciosBundle:Form:fields.html.twig' %}

{% block title "Contacto" %}



{% block content %}

<h1>Contactar</h1>


{% if result == 0 %}

<form class="form-horizontal" action="{{ path('post_contact', { 'id': entity.id }) }}" method="post">

	
  {{ form_errors(form) }}


		
		{{ form_row(form._token) }}
		{{ form_row(form.name, { 'label': 'Nombre' }) }}
        {{ form_row(form.email, { 'label': 'Email' }) }}
        {{ form_row(form.linkedin, { 'label': 'URL Linkedin' }) }}
        
		<div class="control-group">
		   <div class="control-label"></div><div class="controls">Ejemplo: http://linkedin.com/in/miquelcamps</div>
		</div>
        
        {{ form_row(form.body, { 'label': 'Mensaje' }) }}



		<div class="form-actions">
			<button type="submit" class="btn btn-primary">Enviar</button> &nbsp;
			<a href="{{ path('post_show', { 'id': entity.id, 'slug': entity.slug }) }}" class="btn">Cancelar</a>
		</div>
	
	
</form>

{% elseif result == 1 %}

	
	<div class="alert alert-success">
		<b>Mensaje enviado correctamente</b>
		<div class="alert-actions">
			<a class="btn small" href="{{ path('post_show', { 'id': entity.id, 'slug': entity.slug }) }}">Volver al anuncio</a>
		</div>
	</div>
	
{% endif %}


{% endblock %}