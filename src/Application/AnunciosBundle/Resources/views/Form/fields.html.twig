{% block field_row %}
{% spaceless %}

	{% if class is not defined %}
		{% set class = "xlarge" %}
	{% endif %}

    <div class="clearfix {% if errors|length > 0 %}error{% endif %}">
        {{ form_label(form, label) }}
		<div class="input">
			{{ form_widget(form, { 'attr': {'class': class, 'rows':9} }) }}
			
	        {% for error in errors %}
	            <span class="help-inline">{{ error.messageTemplate }}</span>
	        {% endfor %}
			

		</div>
    </div>
{% endspaceless %}
{% endblock field_row %}