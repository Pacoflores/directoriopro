{% block script_load %}
	
	
	$('#txt_tags').tagsInput({
		autocomplete_url:'http://dir.betabeers.com/tag/autocomplete',
		onAddTag:onAddTag,
		onRemoveTag:onRemoveTag,
	});
	
	function onAddTag(tag){
		
		$.get('http://dir.betabeers.com/tag/create',{'title':tag}, function(data) {
			//alert(data);
		});
	
	}
	
	function onRemoveTag(tag){
		
		$.get('http://dir.betabeers.com/tag/follow',{'action':0, 'title': tag}, function(data) {
			//alert(data);
		});
	
	
	}
	





	$('#application_userbundle_usertype_body')
		.attr('data-content','<ul><li>¿Quién eres?</li><li>¿A qué te dedicas?</li><li>¿Cual es tu especialidad?</li><li>¿Qué buscas en el directorio?</li></ul>')
		.attr('data-original-title','Consejo para la descripción')
		.popover({placement:'left',animation:false});


	autoGeo();

	$(".accordion").collapse().css('height','auto');
	
	// avatar preview
	gravatar_id = '{{ entity.getGravatarId() }}';
	twitter_id = '{{ entity.getTwitterUrl() }}';
	facebook_id = '{{ entity.getFacebookId() }}';
		
	userAvatar( $('#application_userbundle_usertype_avatar_type').val() );
	
	$('#application_userbundle_usertype_avatar_type').change(function(){
		userAvatar( $(this).val() );
	});
	
	networks_tooltip();
	

	if( $('#todo').size() ){
		
		{% if entity.categoryid != 0 %}$('#todo li:eq(0)').hide();{% endif %}
		{% if entity.name != '' %}$('#todo li:eq(1)').hide();{% endif %}
		{% if entity.body != '' %}$('#todo li:eq(2)').hide();{% endif %}
		{% if entity.location != '' %}$('#todo li:eq(3)').hide();{% endif %}
		{% if entity.url != '' %}$('#todo li:eq(4)').hide();{% endif %}
		{% if entity.twitterurl != '' %}$('#todo li:eq(5)').hide();{% endif %}
	}
	
	
	if( document.location.href.indexOf('updated') != -1 ){
		$('#new_badge').delay(500).slideDown();
	}
	
	
	if( document.location.href.indexOf('#fblogin') != -1 ){
		mpq.track("facebook connect complete");
		
	}else if( document.location.href.indexOf('#register') != -1 ){
		mpq.track("register complete");
		
	}else if( document.location.href.indexOf('#tags') != -1 ){
		$('.tabs a[id=tab_tags]').tab('show');
	}
	
	
	

	$('#btn_close').click(function(){
		$('#new_badge').hide();
	});
	
	
{% endblock %}