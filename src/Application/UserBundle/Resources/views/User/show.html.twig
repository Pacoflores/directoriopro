	</script>

{% endif %}


{% if entity.androidurl %}
	
	<div id="android">
		<ul id="android_list"></ul>
	</div>

	<script>
	var android_user = '{{ entity.androidurl }}';
	$('#tab_android').show();
	</script>

{% endif %}


{% if entity.itunesurl %}
	
	<div id="itunes">
		<ul id="itunes_list"></ul>
	</div>

	<script>
	var itunes_user = '{{ entity.itunesurl }}';
