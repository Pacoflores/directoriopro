{% set nav_user = 1 %}
{% extends "ApplicationAnunciosBundle::layout.html.twig" %}
{% set form_url = path('user_contact', { 'id': entity.id }) %}
{% block title entity.name %}

{% block sidebar %}

	{% if app.session.get('id') != entity.id %}
		{% include "ApplicationAnunciosBundle:Form:contact.html.twig" %}
		<br/><br/>
		
		
		
		<a href="{{ path('user_recommend', { 'id': entity.id }) }}" class="btn large">Recomendar</a>

		
		

		
		
	{% else %}
		<a href="{{ path('user_invite') }}" class="btn large primary">Invitar contactos</a>
	{% endif %}
	<br/>
	
	{% if comments %}
		<b style="display:block;margin-bottom:7px">Recomendaciones</b>
		
		{% for item in comments %}
			<a href="{{ path('user_comment', { 'user_id': entity.id, 'comment_id': item.comment_id }) }}" style="display:inline" data-original-title="<b>{{ item.name }}</b><br>{{ categories[item.category_id] }}" rel="twipsy"><img src="{{ item.user.getAvatar('normal') }}" width="40" height="40" /></a>
		{% endfor %}
	
		<br/><a href="{{ path('user_comments', { 'id': entity.id }) }}">Ver todas</a>
	{% endif %}
	
{% endblock %}


{% block content %}


<style>
.tabs > li > a{padding:0 10px}
</style>

<ul class="breadcrumb">
  <li><a href="{{ path('post') }}">Inicio</a> <span class="divider">/</span></li>
  <li><a href="{{ path('user') }}">Profesionales</a> <span class="divider">/</span></li>
  <li><a href="{{ path('user_search') }}?c={{ entity.categoryid }}">{{ categories[ entity.categoryid ] }}</a></li>
</ul>



<img src="{{ entity.getAvatar('bigger') }}" width="100" height="100" style="float:left;margin-right:10px"/>

<h1 style="margin-bottom:0">{{ entity.name }}</h1>
<b>{{ categories[ entity.categoryid ] }}</b> 
{% if entity.freelance %}
	<span class="freelance">&#149; freelance</span>
{% endif %}
<br/>
{{ entity.location }}
<br/>
<span class="date">registrado desde {{ entity.date|date('d/m/Y') }}</span>
<br/><br/><br/>


<ul id="tabs" class="tabs">


	<li class="dropdown" data-dropdown="dropdown">
		<a href="#" class="dropdown-toggle">Perfil</a>
		<ul class="dropdown-menu">
			<li class="active"><a href="#info"><img src="/bundles/applicationanuncios/images/portafolio.png" align="absmiddle"> Descripción</a></li>
			<li id="tab_linkedin" style="display:none"><a href="#linkedin" onclick="get_linkedin();"><img src="/bundles/applicationanuncios/images/linkedin.png" align="absmiddle"> CV en linkedin</a></li>
		</ul>
	</li>




	{% if entity.dribbbleurl or entity.forrsturl or entity.flickrurl %}
		<li class="dropdown" data-dropdown="dropdown">
			<a href="#" class="dropdown-toggle">Diseña</a>
			<ul class="dropdown-menu">
				<li id="tab_flickr" style="display:none"><a href="#flickr" onclick="get_flickr();"><img src="/bundles/applicationanuncios/images/flickr.png" align="absmiddle"> Flickr</a></li>
				<li id="tab_dribbble" style="display:none"><a href="#dribbble" onclick="get_dribbble();"><img src="/bundles/applicationanuncios/images/dribbble.png" align="absmiddle"> Dribbble</a></li>
				<li id="tab_forrst" style="display:none"><a href="#forrst" onclick="get_forrst();"><img src="/bundles/applicationanuncios/images/forrst.png" align="absmiddle"> Forrst</a></li>
			</ul>
		</li>
	{% endif %}
	
	{% if entity.githuburl or entity.stackoverflowurl or entity.masterbranchurl %}
		<li class="dropdown" data-dropdown="dropdown">
			<a href="#" class="dropdown-toggle">Programa</a>
			<ul class="dropdown-menu">
				<li id="tab_github" style="display:none"><a href="#github" onclick="get_github();"><img src="/bundles/applicationanuncios/images/github.png" align="absmiddle"> Github</a></li>
				<li id="tab_stackoverflow" style="display:none"><a href="#stackoverflow" onclick="get_stackoverflow();"><img src="/bundles/applicationanuncios/images/stackoverflow.png" align="absmiddle"> Stackoverflow</a></li>
				<li id="tab_masterbranch" style="display:none"><a href="#masterbranch" onclick="get_masterbranch();"><img src="/bundles/applicationanuncios/images/masterbranch.png" align="absmiddle"> Masterbranch</a></li>
			</ul>
		</li>
	{% endif %}
	
	{% if entity.youtubeurl or entity.vimeourl %}
		<li class="dropdown" data-dropdown="dropdown">
			<a href="#" class="dropdown-toggle">Video</a>
			<ul class="dropdown-menu">
				<li id="tab_youtube" style="display:none"><a href="#youtube" onclick="get_youtube();"><img src="/bundles/applicationanuncios/images/youtube.png" align="absmiddle"> Youtube</a></li>
				<li id="tab_vimeo" style="display:none"><a href="#vimeo" onclick="get_vimeo();"><img src="/bundles/applicationanuncios/images/vimeo.png" align="absmiddle"> Vimeo</a></li>
			</ul>
		</li>
	{% endif %}
	
	{% if entity.chromeurl or entity.androidurl or entity.itunesurl %}
		<li class="dropdown" data-dropdown="dropdown">
			<a href="#" class="dropdown-toggle">Apps</a>
			<ul class="dropdown-menu">
				<li id="tab_android" style="display:none"><a href="#android" onclick="get_android();"><img src="/bundles/applicationanuncios/images/android.png" align="absmiddle"> Android</a></li>
				<li id="tab_itunes" style="display:none"><a href="#itunes" onclick="get_itunes();"><img src="/bundles/applicationanuncios/images/itunes.png" align="absmiddle"> iPhone / iPad</a></li>
				<li id="tab_chrome" style="display:none"><a href="#chrome" onclick="get_chrome();"><img src="/bundles/applicationanuncios/images/chrome.png" align="absmiddle"> Chrome</a></li>
			</ul>
		</li>
	{% endif %}
	
	{% if entity.pinboardurl or entity.deliciousurl %}
		<li class="dropdown" data-dropdown="dropdown">
			<a href="#" class="dropdown-toggle">Favs</a>
			<ul class="dropdown-menu">
				<li id="tab_delicious" style="display:none"><a href="#delicious" onclick="get_delicious();"><img src="/bundles/applicationanuncios/images/delicious.png" align="absmiddle"> delicious</a></li>
				<li id="tab_pinboard" style="display:none"><a href="#pinboard" onclick="get_pinboard();"><img src="/bundles/applicationanuncios/images/pinboard.png" align="absmiddle"> pinboard</a></li>
			</ul>
		</li>
	{% endif %}
	
	{% if entity.twitterurl %}
		<li class="dropdown" data-dropdown="dropdown">
			<a href="#" class="dropdown-toggle">Twitter</a>
			<ul class="dropdown-menu">
				<li id="tab_twitterstatus"><a href="#twitterstatus" onclick="get_twitterstatus();">Estados</a></li>
				<li id="tab_twitter"><a href="#twitter" onclick="get_twitter();">Listas</a></li>
			</ul>
		</li>
	{% endif %}
	
	
	

	
</ul>

<div id="loader"><img src="{{ asset('bundles/applicationanuncios/images/loader.gif') }}"/></div>

<div class="pill-content">






<div class="active" id="info">
	{% if entity.body %}
		<pre>{{ entity.body}}</pre>
	{% else %}
		<pre>El usuario todavía no ha completado su descripción</pre>
	{% endif %}
	
	{% if entity.url %}<a rel="nofollow,noindex" target="_blank" class="ico portafolio" href="{{ entity.url }}">Visitar Portafolio</a>{% endif %}
</div>


