{% extends "ApplicationAnunciosBundle::layout.html.twig" %}
{% set form_url = path('user_contact', { 'id': entity.id }) %}
{% block title entity.name %}

{% block sidebar %}

	{% include "ApplicationAnunciosBundle:Form:contact.html.twig" %}
	
{% endblock %}


{% block content %}




<ul class="breadcrumb">
  <li><a href="{{ path('post') }}">Inicio</a> <span class="divider">/</span></li>
  <li><a href="{{ path('user') }}">Profesionales</a> <span class="divider">/</span></li>
  <li class="active"><a href="{{ path('post_search') }}?c={{ entity.categoryid }}">{{ categories[ entity.categoryid ] }}</a> <span class="divider">/</span></li>
</ul>




<img src="{{ entity.getAvatar(100) }}" width="100" height="100" style="float:left;margin-right:10px"/>

<h1>{{ entity.name }}</h1>












<span class="date">{{ entity.location }}</span> 

{% if entity.freelance %}
	<span class="freelance">&#149; freelance</span>
{% endif %}

<br/>


registrado desde {{ entity.date|date('d/m/Y') }}
<br/><br/><br/>



{% if entity.body %}
	<pre>{{ entity.body}}</pre>
{% endif %}

<div style="padding:10px 0">
	{% if entity.url %}<a href="{{ entity.url }}">portafolio</a> &nbsp;&nbsp; {% endif %}
	{% if entity.linkedinurl %}<a href="{{ entity.linkedinurl }}">linkedin</a> &nbsp;&nbsp; {% endif %}
	{% if entity.twitterurl %}<a href="{{ entity.twitterurl }}">twitter</a> &nbsp;&nbsp; {% endif %}
	{% if entity.forrsturl %}<a href="{{ entity.forrsturl }}">forrst</a> &nbsp;&nbsp; {% endif %}
	{% if entity.githuburl %}<a href="{{ entity.githuburl }}">github</a> &nbsp;&nbsp; {% endif %}
	{% if entity.dribbbleurl %}<a href="{{ entity.dribbbleurl }}">dribbble</a> &nbsp;&nbsp; {% endif %}
	{% if entity.flickrurl %}<a href="{{ entity.flickrurl }}">flickr</a> &nbsp;&nbsp; {% endif %}
	{% if entity.youtubeurl %}<a href="{{ entity.youtubeurl }}">youtube</a> &nbsp;&nbsp; {% endif %}
</div>	

