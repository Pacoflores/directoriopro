{% extends "ApplicationAnunciosBundle::layout.html.twig" %}
{% set form_url = path('user_contact', { 'id': entity.id }) %}
{% block title entity.name %}

{% block sidebar %}

	{% include "ApplicationAnunciosBundle:Form:contact.html.twig" %}
	
	
	<br/><br/>
	
	
	
	{% if entity.url %}<a rel="nofollow,noindex" target="_blank" class="portafolio" href="{{ entity.url }}">Portafolio</a>{% endif %}
	{% if entity.twitterurl %}<a rel="nofollow,noindex" target="_blank" class="twitter" href="http://twitter.com/{{ entity.twitterurl }}">Twitter</a>{% endif %}
	{% if entity.linkedinurl %}<a rel="nofollow,noindex" target="_blank" class="linkedin" href="http://es.linkedin.com/in/{{ entity.linkedinurl }}">Linkedin</a>{% endif %}
	{% if entity.forrsturl %}<a rel="nofollow,noindex" target="_blank" class="forrst" href="http://forrst.com/people/{{ entity.forrsturl }}">Forrst</a>{% endif %}
	{% if entity.githuburl %}<a rel="nofollow,noindex" target="_blank" class="github" href="http://github.com/{{ entity.githuburl }}">Github</a>{% endif %}
	{% if entity.dribbbleurl %}<a rel="nofollow,noindex" target="_blank" class="dribbble" href="http://dribbble.com/{{ entity.dribbbleurl }}">Dribbble</a>{% endif %}
	{% if entity.flickrurl %}<a rel="nofollow,noindex" target="_blank" class="flickr" href="http://flickr.com/{{ entity.flickrurl }}">Flickr</a>{% endif %}
	{% if entity.youtubeurl %}<a rel="nofollow,noindex" target="_blank" class="youtube" href="http://www.youtube.com/user/{{ entity.youtubeurl }}">Youtube</a>{% endif %}
	
{% endblock %}


{% block content %}

<style>
H1{font-size:24px;margin-bottom:5px}
.carrusel img{width:100px;height:100px}
</style>


<ul class="breadcrumb">
  <li><a href="{{ path('post') }}">Inicio</a> <span class="divider">/</span></li>
  <li><a href="{{ path('user') }}">Profesionales</a> <span class="divider">/</span></li>
  <li><a href="{{ path('post_search') }}?c={{ entity.categoryid }}">{{ categories[ entity.categoryid ] }}</a></li>
</ul>



<img src="{{ entity.getAvatar(100) }}" width="100" height="100" style="float:left;margin-right:10px"/>

<h1>{{ entity.name }}</h1>












<b>{{ entity.location }}</b> 

{% if entity.freelance %}
	<span class="freelance">&#149; freelance</span>
{% endif %}

<br/>


<span class="date">registrado desde {{ entity.date|date('d/m/Y') }}</span>
<br/><br/><br/>


<ul id="tabs" class="tabs">
  <li id="tab_info" class="active"><a href="#">Informaci√≥n</a></li>
  <!--<li id="tab_networks"><a href="#">Curriculum</a></li>-->
  <li id="tab_dribbble" style="display:none"><a href="#">Dribbble</a></li>
  <!--<li id="tab_options"><a href="#">Youtube</a></li>-->
</ul>

<div id="tabs_content">


<div id="content_info">
	{% if entity.body %}
		<pre>{{ entity.body}}</pre>
	{% endif %}
</div>





{% if entity.dribbbleurl %}

	<div id="content_dribbble" style="display:none" class="function">
		<ul class="media-grid carrusel" id="dribbble_images"></ul>
		<img id="dribbble_big"/>
	</div>

	<script>
	var dribbble_user = '{{ entity.dribbbleurl }}';
	$('#tab_dribbble').show();
	</script>

{% endif %}


</div>



<script>
$().ready(function(){
	$('#tabs a').each(function(){
		$(this).click(function(){
			id = $(this).parent().attr('id').replace('tab_','');
			
			$('#tabs li').attr('class','');
			$('#tab_' + id).attr('class','active');

			$('#tabs_content > div[class!="actions"]').hide();
			
			$( '#content_' + id).show();
			if( $( '#content_' + id).hasClass('function') ){
				eval('get_'+id+'();');
			}
		});
	});
});
</script>


{% endblock %}