{% set nav_event = 1 %}
{% extends "ApplicationAnunciosBundle::layout.html.twig" %}

{% block title "Eventos" %}


{% block sidebar %}
	<a href="{{ path('event_new') }}" class="btn large primary">Publicar evento</a>

{% endblock %}



{% block content %}


<h1>Eventos</h1>




<ul style="list-style-type:none;margin:0">
    {% for entity in entities %}
        <li style="margin-bottom:20px;" {% if entity.featured == 1 %}class="featured"{% endif %}">
		

			<div style="width:70px;padding:5px 0;background:#efefef;float:left;margin-right:10px;text-align:center;font-size:11px;">
				apuntados<br/>
				<span style="font-size:25px;padding:10px 0;display:block">
				{% if entity.users %}
					{{ entity.users }}
				{% else %}
					0
				{% endif %}
				</span>
			</div>

			<div style="float:left;width:485px">


            <a href="{{ path('event_show', { 'id': entity.id }) }}" class="title">{{ entity.title }}</a>
			<br/>
            {{ entity.body|truncate(200) }}
			<br/>
            <span class="date">{{ entity.getPrettyDate() }} - {{ entity.location }}</span>

			</div>
			<br class="clear"/>
        </li>
    {% endfor %}
</ul>





{{ pager|raw }}




{% endblock %}