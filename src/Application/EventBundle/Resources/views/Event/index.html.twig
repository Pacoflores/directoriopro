{% set date_now = false %}
{% set nav_event = 1 %}
{% extends "ApplicationAnunciosBundle::layout.html.twig" %}

{% block title "Eventos" %}


{% block sidebar %}
	<a href="{{ path('event_new') }}" class="btn large primary" style="font-weight:bold;font-size:20px;">Publicar evento</a>



	<br/><b>Top ciudades</b><br/><br/>

	<ul>
    {% for city in cities %}
		<li><a style="display:inline" href="{{ path('event_city', { 'id': city.id }) }}">{{ city.name }}</a> ({{ city.total }})</li>
    {% endfor %}
	</ul>
	
	<b>Suscribirse</b><br/><br/>
	<ul>
		<li><a style="display:inline" href="http://feeds.feedburner.com/AgendaBetabeers" target="_blank">RSS</a></li>
		<li><a style="display:inline" href="{{ path('event_calendar') }}">iCal</a></li>
		<li><a style="display:inline" href="http://twitter.com/betabeers" target="_blank">Twitter</a></li>
	</ul>


{% endblock %}



{% block content %}


<h1>Eventos</h1>




<ul style="list-style-type:none;margin:0">
    {% for entity in entities %}
        		
			{% set date_now_current = entity.getPrettyDate() %}
			{% if date_now != date_now_current %}
				{% set date_now = date_now_current %}
				{% if date_now != '' %}
					<li style="margin-bottom:10px;background:url('{{ asset('bundles/applicationanuncios/images/calendar.png') }}') no-repeat left center;padding:10px;padding-left:41px;font-weight:bold;font-size:15px;color:#404040">{{ date_now }}</li>
				{% endif %}
			{% endif %}
			
			
			<li style="margin-bottom:20px;margin-left:39px" {% if entity.featured == 1 %}class="featured"{% endif %}">
				
	            <a href="{{ path('event_show', { 'id': entity.id }) }}" class="title">{{ entity.title }}</a><br/>
				<b>{{ entity.datestart|date('H:i') }}</b><br/>
	            {{ entity.body|truncate(200) }}
				<br/>
				<a href="{{ path('event_city', { 'id': entity.getCityId() }) }}" class="date">{{ entity.location }}</a>
				
				{% if entity.users %}
					<div style="padding-top:5px">
						<span class="users" style="margin-left:0;width:34px;height:34px;background-color:#efefef;float:left;margin-right:5px;background-position:10px center"><span style="position:relative;top:7px;left:10px;">{{ entity.users }}</span></span>
						{% for user in entity.users_list %}
							<a href="{{ path('user_show', { 'id': user.id }) }}" data-original-title="<b>{{ categories[ user.getCategoryId() ] }}</b><br/>{{ user.getName() }}" rel="twipsy" style="float:left;margin-right:5px"><img src="{{ user.getAvatar('normal') }}" width="34" height="34"/></a>
						{% endfor %}
						<br class="clear"/>
					</div>
				{% endif %}
				

        </li>
    {% endfor %}
</ul>





{{ pager|raw }}




{% endblock %}