{% set date_start = entity.datestart|date('d/m/Y') %}
{% set date_end = entity.dateend|date('d/m/Y') %}
{% set nav_event = 1 %}
{% extends "ApplicationAnunciosBundle::layout.html.twig" %}
{% set share_url = url('event_show', { 'id': entity.id }) %}

{% block title entity.title %}
{% set location = entity.getLocation() %}


{% block sidebar %}





	<img src="{{ asset('bundles/applicationanuncios/images/calendarb.png') }}" style="float:left;margin-top:-5px;margin-right:15px"/>
	<b style="font-size:20px">{{ entity.getPrettyDate('%e %B') }}</b>
	<span style="font-size:17px">{{ entity.datestart|date('H:i') }} - {{ entity.dateend|date('H:i') }}
	<!--
	{% if date_start == date_end %}
		{{ entity.dateend|date('H:i') }}
	{% else %}
		{{ entity.dateend|date('d/m/Y H:i') }}
	{% endif %}
	-->
	</span>
	<br class="clear"/>
	
	
	<div style="margin-top:15px;border-top:1px #b3b3b3 solid;padding:15px 0;">
		<a href="http://maps.google.es/maps?q={{ entity.address }}, {{ location }}" target="_blank" style="padding-left:30px;padding-top:0;min-height:29px;background:url('{{ asset('bundles/applicationanuncios/images/marker.png') }}') no-repeat left top;color:white">
		{{ entity.address }}, {{ location }}
		</a>
	</div>
	


	{% if user.id == false %}
		<a class="btn primary" href="{{ path('event_go', { 'id': entity.id, 'value': 1 }) }}">Me apunto</a><br/>
	{% else %}
	
		{% if apuntado == false %}
			<a class="btn primary" href="{{ path('event_go', { 'id': entity.id, 'value': 1 }) }}">Me apunto</a><br/>
		{% else %}
			<a class="btn danger" href="{{ path('event_go', { 'id': entity.id, 'value': 0 }) }}">No voy a ir</a><br/>
		{% endif %}
		
	{% endif %}
	
	{% if entity.url %}
		<a class="btn" href="{{ entity.url }}" target="_blank">Más información</a><br/>
	{% endif %}
			
	{% if user.id == app.session.get('id') or app.session.get('admin') == 1 %}
		<a class="btn" href="{{ path('event_edit', { 'id': entity.id }) }}">Editar evento</a>
	{% endif %}
	

	
	
{% endblock %}



{% block content %}


<style>
.filters{border:0;background:#666;padding:15px;color:white}

</style>

<ul class="breadcrumb">
  <li><a href="{{ path('post') }}">Inicio</a> <span class="divider">/</span></li>
  <li><a href="{{ path('event') }}">Eventos</a> <span class="divider">/</span></li>
  <li><a href="{{ path('event_city', { 'id': entity.getCityId() }) }}">Eventos en {{ city.name }}, {{ country.name }}</a></li>
</ul>



<h1>{{ entity.title }}</h1>



	
	<div style="background:#FFFFCC;padding:10px;margin-bottom:15px">
	
	<a href="https://twitter.com/share" class="twitter-share-button" data-lang="es">Twittear</a>
	<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

	
	<script src="http://platform.linkedin.com/in.js" type="text/javascript"></script>
	<script type="IN/Share" data-counter="right"></script>
	
	
	<iframe src="http://www.facebook.com/plugins/like.php?href={{ share_url }}&amp;send=false&amp;layout=button_count&amp;width=200&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21" scrolling="no" frameborder="0" style="margin-left:20px;border:none; overflow:hidden; width:100px; height:21px;" allowTransparency="true"></iframe>

	
	<a href="http://www.google.com/calendar/event?action=TEMPLATE&text={{ entity.title }}&dates={{ entity.getGDateStart() }}/{{ entity.getGDateEnd() }}&details=&location={{ entity.address }}, {{ location }}&trp=false&sprop=&sprop=name:" target="_blank"><img src="http://www.google.com/calendar/images/ext/gc_button1.gif" alt="0" border="0"></a>

	</div>
	
	


	<pre>{{ entity.body }}</pre>

	

	
	{% if users %}
		<b>{{ users | length }} apuntados</b>
		<br/><br/>
		

	
		{% for user in users %}
			<a href="{{ path('user_show', { 'id': user.id }) }}" data-original-title="<b>{{ categories[ user.getCategoryId() ] }}</b><br/>{{ user.getName() }}" rel="twipsy" style="float:left;margin-right:5px"><img src="{{ user.getAvatar('normal') }}" width="38" height="38"/></a>
		{% endfor %}
	
	
	
		<br class="clear"/>
	{% endif %}
	
	<br/><br/>
	Publicado por <a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.name }}</a> el {{ entity.date|date('d/m/Y') }} - {{ entity.visits }} visitas


{% endblock %}

