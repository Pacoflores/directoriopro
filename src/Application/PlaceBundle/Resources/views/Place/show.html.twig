{% extends "ApplicationAnunciosBundle::layout.html.twig" %}
{% set share_url = url('place_show', { 'id': entity.id }) %}

{% block title entity.title %}
{% set location = entity.getLocation() %}


{% block sidebar %}


	
	{% if entity.url %}
		<a class="btn primary" href="{{ entity.url }}" target="_blank">Más información</a><br/>
	{% endif %}
			
	{% if user.id == app.session.get('id') or app.session.get('admin') == 1 %}
		<a class="btn" href="{{ path('place_edit', { 'id': entity.id }) }}">Editar espacio</a><br/>
	{% endif %}
	

	
	
	<b>Compartir</b>
	
	<br/><br/>
	

	<a href="https://twitter.com/share" class="twitter-share-button" data-lang="es">Twittear</a>
	<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

	
	<br/><br/>
	
	<script src="http://platform.linkedin.com/in.js" type="text/javascript"></script>
	<script type="IN/Share" data-counter="right"></script>
	
	<br/><br/>
	
	<iframe src="http://www.facebook.com/plugins/like.php?href={{ share_url }}&amp;send=false&amp;layout=button_count&amp;width=200&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:200px; height:21px;" allowTransparency="true"></iframe>

	

	<br/>
	
	
{% endblock %}



{% block content %}



<ul class="breadcrumb">
  <li><a href="{{ path('post') }}">Inicio</a> <span class="divider">/</span></li>
  <li><a href="{{ path('place') }}">Espacios coworking</a></li>
</ul>



<h1>{{ entity.title }}</h1>

	Dirección: <a href="http://maps.google.es/maps?q={{ entity.address }}, {{ location }}" target="_blank">{{ entity.address }}, {{ location }}</a>
	<br/>
	
	{% if entity.price %}
		Precio: {{ entity.price }}
	{% endif %}


	<br/><br/>



	<pre>{{ entity.body }}</pre>

	<p>Publicado por <a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.name }}</a> el {{ entity.date|date('d/m/Y') }} - {{ entity.visits }} visitas</p>




{% endblock %}

