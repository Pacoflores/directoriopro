<h1>Test list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Body</th>
            <th>Questions</th>
            <th>Date</th>
            <th>Featured</th>
            <th>User_id</th>
            <th>Visits</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('test_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.body }}</td>
            <td>{{ entity.questions }}</td>
            <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.featured }}</td>
            <td>{{ entity.userid }}</td>
            <td>{{ entity.visits }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('test_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('test_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('test_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
